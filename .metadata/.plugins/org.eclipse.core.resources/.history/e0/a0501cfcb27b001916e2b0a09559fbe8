package graven;

public class Players {
	private String name ;
	private double Strong ;
	private int sante  ;
	public Players() 
	{
		System.out.println("Constructeur vide");
	}
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public double getStrong() {
		return Strong;
	}
	public void setStrong(double strong) {
		Strong = strong;
	}
	public int getSante() {
		return sante;
	}
	public void setSante(int sante) {
		this.sante = sante;
	}
	public Players(String name, double strong, int sante) {
	
		this.name = name;
		Strong = strong;
		this.sante = sante;
	}
	public void  attaquer(int attaquer)
	{
		this.sante = this.sante - attaquer ;
	}
	


}
